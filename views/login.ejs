<!DOCTYPE html>
<html >
<head>
  <meta charset="UTF-8">
  <title>Connexion à Skype Uqac</title>
  
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/meyer-reset/2.0/reset.min.css">
  <link rel='stylesheet prefetch' href="https://fonts.googleapis.com/css?family=Roboto:400,100,300,500,700,900|RobotoDraft:400,100,300,500,700,900">
  <link rel='stylesheet prefetch' href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
  <link rel="stylesheet" href="/stylesheets/style.css">
  
</head>
<body>
  <div class="pen-title">
    <h1>Skype Uqac</h1><span>Messenger <i class='fa fa-envelope-o'></i></span>
  </div>
  <!-- Form Module-->
  <div class="module form-module">
    <div class="toggle"><i class="fa fa-times fa-pencil"></i>
      <div class="tooltip">Cliquer</div>
    </div>
    <div class="form">
      <h2>Connexion a votre compte</h2>
      <form method="post" onsubmit="return connexion()" id="connexion">
        <input type="text" placeholder="Pseudo" id="pseudo" />
        <input type="password" placeholder="Password" id="password"/>
        <input type="submit" value="Se connecter" />
      </form>
    </div>
    <div class="form">
      <h2>Crée un compte</h2>
      <form methode="post" onsubmit="return identification()" id="creation">
        <input type="text" placeholder="Pseudo" id="pseudo" />
        <input type="password" placeholder="Password" id="password" />
        <input type="email" placeholder="Email" id="mail" />
        <input type="submit" value="S'inscrire" />
      </form>
    </div>
    <div class="cta"><a href="#">J'ai oublié mon mot de passe</a></div>
  </div>
  <script src="http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
  <script>
    // Toggle Function
    $('.toggle').click(function(){
    // Switches the Icon
    $(this).children('i').toggleClass('fa-pencil');
    // Switches the forms
    $('.form').animate({
        height: "toggle",
        'padding-top': 'toggle',
        'padding-bottom': 'toggle',
        opacity: "toggle"
        }, "slow");
    });
  </script>
  <script type="text/javascript">
    //<![CDATA[   
    function connexion(){
      bool = false;
      form = document.forms['connexion'];
      // si la valeur du champ prenom est non vide
      if(form.elements['pseudo'].value != "" && form.elements['password'].value != "") {
        // les données sont ok, on peut envoyer le formulaire    
        bool = true;
      }
      else {
        // sinon on affiche un message
        alert("Saisissez votre pseudo et password");
        // et on indique de ne pas envoyer le formulaire
        bool = false;
      }
      return bool;
    }

    function identification(){
      bool = true;
      pseudo = document.forms['creation'].elements['pseudo'].value;
      pwd = document.forms['creation'].elements['password'].value;
      mail = document.forms['creation'].elements['mail'].value;
      regex1 = /^[a-zA-Z0-9]{3,16}$/;
      regex2 = /^[a-zA-Z0-9]{6,12}$/;
      regex3 = /^[a-zA-Z0-9._-]+@[a-z0-9._-]{2,}\.[a-z]{2,4}$/;
      if(!regex1.test(pseudo)) {
        alert("Votre pseudo doit être compris entre 3 et 16 charactères alphanumérique");
        bool = false;
      }
      if(bool){
        if(!regex2.test(pwd)){
          alert("Votre mot de passe doit être compris entre 6 et 12 charactères alphanumérique");
          bool = false;
        }
      }
      if(bool){
        if(!regex3.test(mail)){
          alert("Votre adresse mail n'est pas valide (ex : prenom.nom@gmail.com)");
          bool = false;
        }
      }
      return bool;
    }
    //]]>
  </script>
</body>
</html>